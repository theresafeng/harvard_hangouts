<div class="row-fluid">
	<div class="span10 offset2">
		<h1>Listing hangouts</h1>
	</div>
</div>
</br>

<div class="row-fluid">
    <div class="span2 bs-docs-sidebar">
        <ul class="nav nav-list bs-docs-sidenav">
			<% if user_signed_in? %>
		  		<li><%= link_to 'New Hangout', new_post_path %></li>
			<% end %>
        </ul>
    </div>

<div class="span6">
<table class="table table-striped">
  <tr>
    <th>Event</th>
    <th>Description</th>
    <th>Location</th>
    <th>Start date time</th>
    <th>End date time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.event %></td>
    <td><%= post.description %></td>
    <td><%= post.location %></td>
    <td><%= l(post.start_date_time, :format =>:long) %></td>
    <td><%= l(post.end_date_time, :format =>:long) %></td>
	<td>
		<ul class="nav nav-pills">
    		<li><%= link_to 'View', post %></li>
		</ul>
	</td>
	<td>
		<ul class="nav nav-pills">
			<li><%= link_to 'Edit', edit_post_path(post) %></li>
		</ul>
	</td>
	<td>
		<ul class="nav nav-pills">
    		<li><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></li>
		</ul>
	</td>
  </tr>
<% end %>
</table>
</div>

</div>
<div class="row-fluid">
	<div class="span6 offset2">
		</br>
		<h2>Forgot your password?</h2>
		</br>
	</div>
</div>

<div class="row-fluid">
    <div class="span2 bs-docs-sidebar">
    </div>

<div class="span6">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :hangout }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %>
  <%= f.email_field :email %></div></br>

  <div><button class="btn btn-primary" type="submit">Send Email</button>	
  <a class="btn" href="/">Cancel</a></div>
<% end %>

<%= render "devise/shared/links" %>
</div>